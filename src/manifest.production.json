{
    "manifest_version": 3,
    "name": "Европочта - отслеживание почтовых отправлений",
    "description": "Отслеживание ваших трэк номеров почтовых отправлений",
    "version": "0.0.1",
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "options_page": "options.html"
}